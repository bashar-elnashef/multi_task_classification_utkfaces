{
    "name": "HydraNet-Modified",
    "n_gpu": 1,

    "arch": {
        "type": "HydraNetModified",
        "args": {}
    },
    "backbone":{
        "type": "resnet34",
        "args": {}
    },
    "data_loader": {
        "type": "UTKFaceDataLoader",
        "args":{
            "data_dir": "data/UTKFaces/",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2,
            "url":"https://drive.google.com/uc?/export=download&id=1M8JM3978OkO4WPMGNavOm0qzstsTy-T8&confirm=t&uuid=40fc9c58-c062-4dca-89ad-9797dfa8b79d"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "multi_head_classifications_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
